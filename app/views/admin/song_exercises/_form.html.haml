.row
  .large-4.columns
    =form_for [:admin, @song, @exercise] do |f|
      .row
        .large-12.columns
          =select_tag 'exercise_id', options_for_select(Admin::Exercise.exercise_list)
      .row
        .large-12.columns
          =f.label :lyric
          =text_area_tag 'song_exercise[lyric]', @song.en_lyric
      .row
        .large-12.columns
          =f.label :points
          =f.text_field :points
          =f.submit class: "button tiny linked"
