!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Admin Musa app"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag 'http://codeorigin.jquery.com/jquery-2.0.3.js'
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            %a{href: "#"} Musa
      %section.top-bar-section
        / Right Nav Section
        %ul.right
          %li.has-dropdown
            %a{href: "#"}
              - if admin_signed_in?
                Welcome #{current_admin.email}
              - else
                You are not signed in.
            %ul.dropdown
              %li
                - if admin_signed_in?
                  = link_to 'Logged In [click to logout]', destroy_admin_session_path, :method => :delete
                - else
                  = link_to 'Login', new_admin_session_path

        / Left Nav Section
        %ul.left
          %li= link_to 'Songs', admin_songs_path
          %li= link_to 'Exercises types', ''
          %li= link_to 'Users', ''

    .row
      .small-12.large-centered.columns
        .panel.callout.radius
          = yield

    = javascript_include_tag "application"
