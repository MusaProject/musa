!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Musa app"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    %script{src: "http://popcornjs.org/code/dist/popcorn-complete.min.js"}
  %body
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            %a{href: "#"} Musa
      %section.top-bar-section
        / Right Nav Section
        %ul.right
          %li.has-dropdown
            %a{href: "#"}
              - if current_user
                Welcome
                = succeed "!" do
                  %strong= current_user.name
              - else
                Not signed in
            %ul.dropdown
              %li
                - if current_user
                  = link_to "Sign out", signout_path, id: "sign_out"
    .row.small-11.small-centered.columns.11.centered
      = yield
    = javascript_include_tag "application"
