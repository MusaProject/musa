!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Musa app"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag 'http://codeorigin.jquery.com/jquery-2.0.3.js'
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    %script{src: "http://popcornjs.org/code/dist/popcorn-complete.min.js"}
  %body
    .menu
      .container.clearfix
        #logo.grid_3
          = link_to root_path do
            %img{ src: 'assets/h_logo.png' }

        #nav.grid_9.omega
          %ul.navigation
            %li
              - if current_user
                Welcome
                = succeed "!" do
                  %strong= current_user.name
              - else
                = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" 
            %li.linked
              - if current_user
                = link_to 'Go to Songs', songs_path
            %li.linked
              - if current_user
                = link_to "Sign out", signout_path, id: "sign_out"

    .row.small-11.small-centered.columns.11.centered
      = yield
    = javascript_include_tag "application"
